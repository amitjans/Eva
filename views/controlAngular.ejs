            <div class="col-lg-12">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar ..." ng-model="queryMedia" ng-keydown="buscarMedia2($event)">
                <span class="input-group-btn">
                <button class="btn btn-default" type="button" ng-click="buscarMedia()">Buscar&nbsp;<i class="fa fa-search" aria-hidden="true"></i></button>
                </span>
              </div><!-- /input-group -->
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <p class="text-center text-primary" ng-if="cargandoMedia"><br/><i class="fa fa-spinner fa-pulse fa-2x fa-fw"></i><span class="sr-only">Loading...</span></p>
