              <hr/>
              <div class="collapse" id="panelFrases">
                <button type="button" class="btn btn-link btn-lg" ng-repeat="(key, frase) in frases" ng-click="enviarFrase(key)">  <i class="fa fa-volume-up fa-lg" aria-hidden="true"></i>&nbsp;{{frase}}</button>
                <button type="button" class="btn btn-link btn-lg" ng-repeat="(key, frase2) in frases2" ng-click="enviarFrase2(key)">  <i class="fa fa-volume-up fa-lg" aria-hidden="true"></i>&nbsp;{{frase2}}</button>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <h2><i class="fa fa-smile-o fa-lg" aria-hidden="true"></i>&nbsp;Emociones</h2>
          <hr/>
          <div class="col-xs-4 col-md-3" ng-repeat="(key, emocion) in emociones">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">{{emocion}}</h3>
              </div>
              <div class="panel-body">
                <button class="btn btn-default btn-lg"><img src="/images/{{emocion}}.png" class="img-responsive" ng-click="enviarEmocion(key)"></button>
              </div>
