  <div class="container" ng-controller="interaccion">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header bgm-bluegray">
            <h2>Listado de Interacciones <small></small></h2>
          </div>
          <div class="card-body table-responsive">
            <table class="table" id="data-table-basic">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th colspan="2">Opciones</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="l in listado">
                  <td>{{ l.nombre }}</td>
                  <td><span class="btn btn-default" ng-click="update(l)"><i class="zmdi zmdi-edit"></i></span></td>
                  <td><span class="btn btn-default" ng-click="delete(l._id)"><i class="zmdi zmdi-delete"></i></span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card z-depth-1">
          <div class="form-horizontal" role="form">
            <div class="card-header bgm-bluegray">
              <h2>{{ accion }} Interacci&oacute;n <small></small></h2>
            </div>
            <div class="card-body card-padding">
              <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control input-sm" ng-model="nombre" placeholder="Nombre">
                </div>
              </div>
              <div class="col-sm-offset-2">
                <div id="myDiagramDiv" style="border: solid 1px gray; border-radius: 1%; width:625px; height:400px">
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="button" ng-show="icon" class="btn btn-primary btn-sm"
                    ng-click="create()">Guardar</button>
                  <button type="button" ng-show="!icon" class="btn btn-primary btn-sm"
                    ng-click="updatesend()">Actualizar</button>
                  <button type="button" class="btn btn-primary btn-sm" ng-click="actualizar()">Actualizar Diagrama</button>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <!-- Button trigger modal -->
                  <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#myModal">Emoci&oacute;n</button>
                  <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#myModalSpeak">Hablar</button>
                  <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#myModalListen">Escuchar</button>
                  <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#myModalWait">Esperar</button>
                  <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#myModalFor">Ciclo</button>
                </div>
              </div>

              <!-- Modal Emocion -->
              <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                          aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Agregar Emoci&oacute;n</h4>
                    </div>
                    <div class="modal-body">
                      <div ng-show="!!node">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Grupo</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="group" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" ng-show="item.isGroup" value="{{item.key}}">
                                {{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Anterior</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="link" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" value="{{item.key}}">{{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Emoci&oacute;n</label>
                        <div class="col-sm-10">
                          <select name="emocion" id="" ng-model="emocion" class="form-control">
                            <option value="ini">Neutral</option>
                            <option value="joy">Alegr&iacute;a</option>
                            <option value="surprised">Sorpresa</option>
                            <option value="sad">Tristeza</option>
                            <option value="anger">Ira</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Nivel</label>
                        <div class="col-sm-10">
                          <select name="nivel" id="" ng-model="nivel" class="form-control">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Velocidad</label>
                        <div class="col-sm-10">
                          <input type="number" min="0" class="form-control input-sm" ng-model="velocidad"
                            placeholder="Velocidad">
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" ng-click="setemocion()" class="btn btn-primary">Salvar</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal Emocion -->

              <!-- Modal Hablar -->
              <div class="modal fade" id="myModalSpeak" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                          aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Agregar Dialogo</h4>
                    </div>
                    <div class="modal-body">
                      <div ng-show="!!node">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Grupo</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="group" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" ng-show="item.isGroup" value="{{item.key}}">
                                {{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Anterior</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="link" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" value="{{item.key}}">{{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Di&aacute;logo</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control input-sm" ng-model="texto" placeholder="Texto a decir">
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" ng-click="setspeak()" class="btn btn-primary">Salvar</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal Hablar -->

              <!-- Modal Escuchar -->
              <div class="modal fade" id="myModalListen" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                          aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Escuchar</h4>
                    </div>
                    <div class="modal-body">
                      <div ng-show="!!node">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Grupo</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="group" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" ng-show="item.isGroup" value="{{item.key}}">
                                {{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Anterior</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="link" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" value="{{item.key}}">{{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" ng-click="setlisten()" class="btn btn-primary">Salvar</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal Escuchar -->

              <!-- Modal Tiempo -->
              <div class="modal fade" id="myModalWait" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                          aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Tiempo de espera</h4>
                    </div>
                    <div class="modal-body">
                      <div ng-show="!!node">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Grupo</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="group" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" ng-show="item.isGroup" value="{{item.key}}">
                                {{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Anterior</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="link" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" value="{{item.key}}">{{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Tiempo (ms)</label>
                        <div class="col-sm-10">
                          <input type="number" class="form-control input-sm" ng-model="time"
                            placeholder="Tiempo a esperar en ms">
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" ng-click="setsleep()" class="btn btn-primary">Salvar</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal Tiempo -->

              <!-- Modal Ciclo -->
              <div class="modal fade" id="myModalFor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                          aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Iteraciones</h4>
                    </div>
                    <div class="modal-body">
                      <div ng-show="!!node">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Grupo</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="group" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" ng-show="item.isGroup" value="{{item.key}}">
                                {{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Anterior</label>
                          <div class="col-sm-10">
                            <select name="emocion" id="" ng-model="link" class="form-control">
                              <option value="" selected>Ninguno</option>
                              <option ng-repeat="item in node" value="{{item.key}}">{{ item.name }}</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Iteraciones</label>
                        <div class="col-sm-10">
                          <input type="number" class="form-control input-sm" ng-model="it"
                            placeholder="Tiempo a esperar en ms">
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" ng-click="setfor()" class="btn btn-primary">Salvar</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal Ciclo -->

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

